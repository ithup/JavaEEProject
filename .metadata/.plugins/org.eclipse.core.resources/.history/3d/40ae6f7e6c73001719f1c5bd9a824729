package com.ithup.guessName;

import org.junit.Test;

/**
 * 
 * @author acer
 *
 */
public class Person {
	String name = "匿名";		//姓名
    int score = 0;			//积分
	public void showInfo(String role,String name){
		switch(role){
		case "1":
			System.out.println(name+":出剪刀");
			break;
		case "2":
			System.out.println(name+":出布");
			break;
		case "3":
			System.out.println(name+":出石头");
			break;
		}
	}
	@Test
	public void test01(){
		Person p=new Person();
		p.showInfo("1","tom");
	}
}
